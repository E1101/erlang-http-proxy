[
  {lager, [
    {handlers, [
      {lager_console_backend, [
          % debug,
          info
      ]},
      {lager_file_backend, [
        {"log/error.log", error, 10485760, "$D0", 5},
        {"log/console.log", info, 10485760, "$D0", 5}
      ]}
    ]}
  ]},

  {http_proxy, [
    { port, 8080 },
    { workers, 256 },
    { timeout, 10000 },
    { sync_stream, true },
    % { stream_chunk_size, 4096 },
    { enable_gzip, true },
    { rewrite_rules, [
        % { "^http://localhost(?:\\:\\d+)/mail/(.*)$", "http://mail.ru/\\1" }
        { "^http://[^/]+/mail/(.*)$", "http://mail.ru/\\1" }
      ]}
  ]}
].
